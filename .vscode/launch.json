{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Build and Run MAPLE",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}/Builds/VisualStudio2022/x64/Debug/App/MAPLE.exe",
            "args": [],
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "preLaunchTask": "Build JUCE Project"
        },
        {
            "name": "C/C++ Runner: Debug Session",
            "type": "cppdbg",
            "request": "launch",
            "args": [],
            "stopAtEntry": false,
            "externalConsole": true,
            "cwd": "d:/develop/maple-client-desktop/Source/App",
            "program": "d:/develop/maple-client-desktop/Source/App/build/Debug/outDebug",
            "MIMode": "gdb",
            "miDebuggerPath": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}